<!DOCTYPE html>

<html lang="en">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Mollie API Demo Application - @ViewBag.Title</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
</head>
<body>

<nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-3">
  <div class="container-fluid">
    <span class="navbar-brand" href="#">Mollie API Demo Application</span>
    <div class="collapse navbar-collapse">
      <ul class="navbar-nav">
        <li class="nav-item"><a class="nav-link" asp-action="Index" asp-controller="Payment">Payments</a></li>
        <li class="nav-item"><a class="nav-link" asp-action="Index" asp-controller="PaymentMethod">Payment methods</a></li>
        <li class="nav-item"><a class="nav-link" asp-action="Index" asp-controller="Customer">Customers</a></li>
      </ul>
    </div>
  </div>
</nav>

<div>
    @RenderBody()
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
